<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_AssaultRifleX</defName>
		<label>assault rifle X</label>
		<description>Can Switch firing mode</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/ChargeLance</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker Inherit = "false">
		</recipeMaker>
		<statBases>
			<WorkToMake>40000</WorkToMake>
			<Mass>3.5</Mass>
			<AccuracyTouch>0.35</AccuracyTouch>
			<AccuracyShort>0.35</AccuracyShort>
			<AccuracyMedium>0.35</AccuracyMedium>
			<AccuracyLong>0.35</AccuracyLong>
			<RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>60</Steel>
			<ComponentIndustrial>7</ComponentIndustrial>
		</costList>
		<comps>
			<li>
				<compClass>AdditionalVerb.Comp_VerbSaveable</compClass>
			</li>
		</comps>
		<verbs>
			<li Class="AdditionalVerb.VerbProperties_Custom">
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ChargeBlasterHeavy</defaultProjectile>
				<warmupTime>1.0</warmupTime>
				<range>31.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<desc>Pew Pew Pew</desc>
				<label>Rapid Fire</label>
				<texPath>UI/Commands/Pew</texPath>
				<accuracyTouch>0.45</accuracyTouch>
				<accuracyShort>0.40</accuracyShort>
				<accuracyMedium>0.25</accuracyMedium>
				<accuracyLong>0</accuracyLong>
			</li>
			<li Class="AdditionalVerb.VerbProperties_Custom">
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_InfernoCannon</defaultProjectile>				
				<forcedMissRadius>1</forcedMissRadius>
				<warmupTime>2.0</warmupTime>
				<range>44.9</range>
				<burstShotCount>2</burstShotCount>
				<ticksBetweenBurstShots>30</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
				<desc>Precisely Pew</desc>
				<label>Precisely Fire</label>
				<texPath>UI/Commands/Snipe</texPath>
				<accuracyTouch>0.0</accuracyTouch>
				<accuracyShort>0.10</accuracyShort>
				<accuracyMedium>0.20</accuracyMedium>
				<accuracyLong>0.50</accuracyLong>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_AssaultRifleA</defName>
		<label>assault rifle bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>11</damageAmountBase>
			<speed>50</speed>
		</projectile>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_AssaultRifleB</defName>
		<label>assault rifle bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>15</damageAmountBase>
			<speed>70</speed>
		</projectile>
	</ThingDef>

</Defs>
